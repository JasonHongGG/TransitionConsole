# ----------------------------------------
# Service Ports
# ----------------------------------------
MAIN_SERVER_PORT=7070
AI_SERVER_PORT=7081
OPERATOR_SERVER_PORT=7082

# ----------------------------------------
# Internal Service Base URLs
# ----------------------------------------
AI_SERVER_BASE_URL=http://localhost:7081
OPERATOR_SERVER_BASE_URL=http://localhost:7082

# ----------------------------------------
# Internal Service Timeouts (ms)
# ----------------------------------------
AI_SERVER_TIMEOUT_MS=120000
OPERATOR_SERVER_TIMEOUT_MS=120000

# ----------------------------------------
# AI Runtime / Provider
# ----------------------------------------
AI_PROVIDER=copilot-sdk
GITHUB_TOKEN=your_github_token_here
AI_RUNTIME_MODEL=gpt-5
AI_RUNTIME_TIMEOUT_MS=180000
AI_RUNTIME_CLI_PATH=
AI_RUNTIME_CLI_URL=

# ----------------------------------------
# Path Planner
# ----------------------------------------
# llm | mock-replay
PATH_PLANNER_PROVIDER=llm
PATH_PLANNER_MOCK_DIR=ai-server/mock-data/path-planner
PATH_PLANNER_MOCK_LOOP=true
PATH_PLANNER_MOCK_RESET_ON_START=true

# ----------------------------------------
# Planned Runner - Feature Toggles
# ----------------------------------------
PLANNED_RUNNER_REAL_BROWSER=false
PLANNED_RUNNER_HIGHLIGHT_MOUSE=false

# ----------------------------------------
# Planned Runner - Model / Timeout
# ----------------------------------------
PLANNED_RUNNER_NARRATIVE_MODEL=
PLANNED_RUNNER_NARRATIVE_TIMEOUT_MS=120000
PLANNED_RUNNER_OPERATOR_MODEL=
PLANNED_RUNNER_OPERATOR_TIMEOUT_MS=120000

# ----------------------------------------
# Planned Runner - Operator Limits
# ----------------------------------------
PLANNED_RUNNER_OPERATOR_SCREENSHOT_B64_MAX=200000
PLANNED_RUNNER_OPERATOR_MAX_RECENT_SCREENSHOT_TURNS=3
